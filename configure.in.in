		rm -f compvers.cc compvers.o compvers
	else
		echo ""
		echo "Cannot determine g++ version"
		echo "Check your compiler installation or"
		echo "try to find out why \"./compvers\" doesn't"
		echo "supply \"2\" or \"3\"!"
		echo ""
		exit
	fi
fi
 

